{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.12"
  },
  "build": {
    "env": {
      "VIRTUAL_ENV": "/vercel/path0/.venv"
    },
    "commands": [
      "apt-get update -y",
      "apt-get install -y python3-distutils",
      "pip install -r requirements.txt"
    ]
  }
}
